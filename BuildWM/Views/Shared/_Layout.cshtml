<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildWM</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuildWM.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body class="bg-gray-100 text-gray-800 font-inter dark:bg-gray-900 dark:text-white">
    <header class="bg-white dark:bg-gray-900 shadow">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-indigo-600 dark:text-indigo-400">buildWM</a>

            <nav class="hidden md:flex space-x-6 items-center">
                <a href="/" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">Home</a>
                <a href="/shop" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">Shop</a>
                <a href="/orders" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">Orders</a>
            </nav>

            <div class="flex items-center space-x-4">
                <!-- Auth Links -->
                <a href="/account/login"
                    class="text-sm bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">
                    Login
                </a>
                <a href="/account/register" class="text-sm text-indigo-600 hover:underline dark:text-indigo-400">Sign
                    Up</a>

                <!-- Dark mode toggle -->
                <button id="theme-toggle" class="text-2xl ml-2">🌓</button>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BuildWM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
