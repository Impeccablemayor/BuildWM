@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="bg-gradient-to-r from-indigo-600 to-purple-600 py-16">
    <div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row items-center gap-10">
        
        <!-- Text Content -->
        <div class="text-center md:text-left flex-1">
            <h1 class="text-5xl md:text-6xl font-extrabold text-white leading-tight">
                Home of Affordable <br> Quality Goods
            </h1>
            <p class="mt-4 text-lg text-indigo-100 max-w-lg">
                Shop the best deals on high-quality products at unbeatable prices.
                Your dream store is just one click away.
            </p>
            <button class="mt-8 bg-white text-indigo-700 font-semibold px-8 py-4 rounded-full shadow-lg hover:bg-indigo-100 transition">
                <a href="#">Get Started</a>
            </button>
        </div>

        <!-- Image -->
        <div class="flex-1 flex justify-center">
            <img src="~/images/image.png" alt="Home Image" class="w-full max-w-md rounded-lg shadow-lg">
        </div>

    </div>
</div>
